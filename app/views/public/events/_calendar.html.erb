<div class="content__block--calender">
  <%# N+1問題の解消 %>
  <% events = events.includes([:restaurant]) %>
  <%= month_calendar events: events do |date, events| %>
    <%= date.day %>
    <% events.each do |event| %>
      <div class="calendar">
        <p class="calendar__time nomal-font">
          <%= event.begin_time.to_s(:time)%> 〜 <%= event.finish_time.to_s(:time) %>
        </p>
        <p class="calendar__name"><%= link_to event_path(event),class:"event-link nomal-font  responsive-font-sm" do %><%= event.name%><% end %></p>
        <%= image_tag(event.restaurant.shop_image, class: "small-square-image") %>
        <p class="calendar__restaurant nomal-font">＠<%= event.restaurant.name %></p>
      </div>
    <% end %>
  <% end %>
</div>